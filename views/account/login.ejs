<% /* Login View */ %>
<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/login" method="post" id="login-form">
  <label for="account_email">Email</label>
  <input 
    type="email" 
    id="account_email" 
    name="account_email" 
    required
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
>
  
  <label for="account_password">Password</label>
  <input 
    type="password" 
    id="account_password" 
    name="account_password" 
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Password must be at least 12 characters, contain at least 1 capital letter, 1 number, and 1 special character."
    required>
  <small>
    Password must be at least 12 characters, contain at least 1 capital letter, 1 number, and 1 special character.
  </small>
  <button type="submit">Login</button>
</form>
<p>Don't have an account? Sign-up <a href="/account/registration">here!</a></p>