<main>
  <h1><%= title %></h1>
  <%- detail %>

  <section class="reviews-section">
    <h2>Reviews</h2>
    <% if (reviews && reviews.length > 0) { %>
      <ul class="reviews-list">
        <% reviews.forEach(function(review) { %>
          <li class="review-item">
            <div class="review-header">
              <span class="review-screen-name">
                <%= review.first_name && review.last_name ? review.first_name.charAt(0) + review.last_name.replace(/\s+/g, '') : 'Anonymous' %>
              </span>
              <span class="review-date"><%= new Date(review.review_date).toLocaleDateString() %></span>
            </div>
            <div class="review-text"><%= review.review_text %></div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No reviews yet for this item.</p>
    <% } %>

    <% if (!loggedin) { %>
      <p>You can add a review by <a href="/account/login">logging in</a>.</p>
    <% } else { %>
      <form action="/review/add" method="POST" class="review-form">
        <div>
          <label for="review_text">Your Review:</label><br>
          <textarea id="review_text" name="review_text" required rows="4" cols="50"><%= typeof review_text !== 'undefined' ? review_text : '' %></textarea>
        </div>
        <div>
          <label>Screen Name:</label>
          <input type="text" value="<%= accountData && accountData.first_name && accountData.last_name ? accountData.first_name.charAt(0) + accountData.last_name.replace(/\s+/g, '') : 'Anonymous' %>" readonly>
        </div>
        <input type="hidden" name="inv_id" value="<%= inv_id %>">
        <input type="hidden" name="account_id" value="<%= accountData ? accountData.account_id : '' %>">
        <button type="submit">Submit Review</button>
      </form>
    <% } %>
  </section>
</main>