<% if (title) { %>
<h1><%= title %></h1>
<% } %>
<%- messages() %>

<div class="management-container">
  <h2>Inventory Management</h2>
  <p>Welcome to the inventory management system. Choose an action below:</p>
  
  <div class="management-links">
    <a href="/inv/add-classification" class="management-link">Add New Classification</a>
    <a href="/inv/add-inventory" class="management-link">Add New Inventory Item</a>
  </div>

  <h2>Manage Inventory</h2>
  <p>Select a classification to find vehicles.</p>
  <% if (typeof classificationSelect !== 'undefined') { %>
    <%- classificationSelect %>
  <% } %>
  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enabled to use this page.</noscript>
  <script src="../../js/inventory.js"></script>
</div>