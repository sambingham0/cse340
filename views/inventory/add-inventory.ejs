<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/add-inventory" method="post" id="add-inventory-form">
  <p><span style="color:red">*</span> Required fields</p>
  
  <label for="inv_make">Make <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_make" 
    name="inv_make" 
    required 
    value="<%= locals.inv_make || '' %>"
  >

  <label for="inv_model">Model <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_model" 
    name="inv_model" 
    required 
    value="<%= locals.inv_model || '' %>"
  >

  <label for="inv_year">Year <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_year" 
    name="inv_year" 
    required 
    pattern="^\d{4}$"
    title="Please enter a valid 4-digit year"
    value="<%= locals.inv_year || '' %>"
  >

  <label for="inv_description">Description <span style="color:red">*</span></label>
  <textarea 
    id="inv_description" 
    name="inv_description" 
    required 
    rows="4"
  ><%= locals.inv_description || '' %></textarea>

  <label for="inv_image">Image Path <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_image" 
    name="inv_image" 
    required 
    value="<%= locals.inv_image || '/images/vehicles/vehicles/no-image.png' %>"
  >

  <label for="inv_thumbnail">Thumbnail Path <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_thumbnail" 
    name="inv_thumbnail" 
    required 
    value="<%= locals.inv_thumbnail || '/images/vehicles/vehicles/no-image-tn.png' %>"
  >

  <label for="inv_price">Price <span style="color:red">*</span></label>
  <input 
    type="number" 
    id="inv_price" 
    name="inv_price" 
    required 
    min="0"
    step="0.01"
    value="<%= locals.inv_price || '' %>"
  >

  <label for="inv_miles">Miles <span style="color:red">*</span></label>
  <input 
    type="number" 
    id="inv_miles" 
    name="inv_miles" 
    required 
    min="0"
    value="<%= locals.inv_miles || '' %>"
  >

  <label for="inv_color">Color <span style="color:red">*</span></label>
  <input 
    type="text" 
    id="inv_color" 
    name="inv_color" 
    required 
    value="<%= locals.inv_color || '' %>"
  >

  <label for="classification_id">Classification <span style="color:red">*</span></label>
  <%- classificationSelect %>

  <button type="submit">Add Vehicle</button>
</form>